<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

       <style>
      /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
      #map {
        height: 400px;
        width: 60%;
      }
      /* Optional: Makes the sample page fill the window. */
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      #floating-panel {
        position: absolute;
        top: 10px;
        left: 25%;
        z-index: 5;
        background-color: #fff;
        padding: 5px;
        border: 1px solid #999;
        text-align: center;
        font-family: 'Roboto','sans-serif';
        line-height: 30px;
        padding-left: 10px;
      }
    </style>




    <title>Registration Confirmation</title>
  </head>
  <body>
    <p style ="text-align: center; color: white; border: 2px solid rgb(0, 123, 255); background-color: rgb(0, 123, 255);"><small>CSC 642 Summer 2019 Individual Assignment Angie Cruz Martinez</small></p> 

    <div class="page-header my-3" style="text-align: center; ">
      <h1>Registration Confirmation</h1>      
    </div>  

      <!-- INFORMATION CALL BACK -->
    <div class = "container">
      <div class = "row justify-content-md-center">

        <div class ="col-md-6" style="text-align: right">
          <b>Name</b> 
        </div> 
        <div class="col-md-6">
          <%=data.first_name%> <%=data.last_name%>
        </div>
      </div>

      <div class = "row justify-content-md-center">   
        <div class ="col-md-6" style="text-align: right">
          <b>Address</b> 
        </div>
        <div class="col-md-6 " >
          <%=data.address%> <%=data.city%>, <%=data.state%> <%=data.zipcode%>
        </div>
      </div>

      <div class = "row justify-content-md-center">
        <div class ="col-md-6" style="text-align: right">
          <b>Phone Number</b> 
        </div>
        <div class="col-md-6">
          <%=data.phone_num%>
        </div>
      </div>

      <div class = "row justify-content-md-center"> 
        <div class ="col-md-6" style="text-align: right">
          <b>Education Level</b> 
        </div> 
        <div class="col-md-6 ">
          <%=data.education%>
        </div>
      </div> 

      <div class = "row justify-content-md-center">
        <div class ="col-md-6" style="text-align: right">
          <b>Income</b> 
        </div>
          <div class="col-md-6">
            <%=data.income%>
          </div>
      </div>  

      <div class = "row justify-content-md-center"> 
        <div class ="col-md-6" style="text-align: right">
          <b>Email</b> 
        </div>
        <div class="col-md-6">
          <%=data.email%>
        </div> 
      </div>
    </div>

    <div class="row justify-content-center py-2 px-2 my-2 mx-2" >
      <div class = "col-md-6"  id="map" style="border: 1px solid darkgrey;"></div>
    </div>

     <!-- Google Maps Scripts -->
    <script>
      function initMap() {
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 16,
          //center: {lat: -34.397, lng: 150.644}
        });
        var geocoder = new google.maps.Geocoder();

        geocodeAddress(geocoder, map);
      }

      function geocodeAddress(geocoder, resultsMap) {
        //var addr = document.getElementById('address').value;
        //var 
        var address = "<%=data.address%> <%=data.city%> <data.state%>, <%=data.zipCode%>";
        geocoder.geocode({'address': address}, function(results, status) {
          if (status === 'OK') {
            resultsMap.setCenter(results[0].geometry.location);
            var marker = new google.maps.Marker({
              map: resultsMap,
              position: results[0].geometry.location
            });
          } else {
            alert('Geocode was not successful for the following reason: ' + status);
          }
        });
      }
    </script>


    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBbbGgneV5CfoBql_jy6R8hz2XdVkdI7Yw&callback=initMap">
    </script>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
