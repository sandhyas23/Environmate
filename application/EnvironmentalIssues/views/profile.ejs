<!DOCTYPE html>


<head>
    <%- include ../views/partials/head.ejs%>
</head>

<header>
    <% include ../views/partials/header.ejs%>
</header>

<body>
    <div class="container">
        <div class="col-md-9 personal-info">
            <h3>Edit Your Profile</h3>

            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-lg-3 control-label">First Name:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" placeholder="EJS TAG FIRST NAME">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Last Name:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" placeholder="EJS TAG LAST NAME">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Email:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" placeholder="EJS TAG EMAIL">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Current Password:</label>
                    <div class="col-md-8">
                        <input class="form-control" type="password" placeholder="EJS TAG CURRENT PASSWORD"> <br> <button class="btn btn-danger" id="edit-password">Change Password</button>
                    </div>
                </div>

                <div class="form-group save-buttons">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <input type="button" class="btn btn-success" value="Save Changes">
                        <a href="/profile"><button class="btn btn-default">Cancel</button></a>

                    </div>
                </div>
        </div>
        <div class="col-md-9 password-info">
            <div class="form-group">
                <label class="col-md-3 control-label">New Password:</label>
                <div class="col-md-8">
                    <input class="form-control" type="password" placeholder="new password">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Confirm New Password:</label>
                <div class="col-md-8">
                    <input class="form-control" type="password" placeholder="confirm new password">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                    <input type="button" class="btn btn-success" value="Save Changes">
                    <span></span>
                    <a href="/profile"><button class="btn btn-default">Cancel</button></a>
                </div>
            </div>
            </form>
        </div>

    </div>
    <footer>
        <%-include ../views/partials/footer.ejs%>
    </footer>

    </html>